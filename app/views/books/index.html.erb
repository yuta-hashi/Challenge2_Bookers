<h1>Books</h1>
<!--delete時に出力-->

<!--投稿一覧機能-->
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book) %></td>
      <td><%= link_to "edit", edit_book_path(book) %></td>
      <td><%= link_to "Destroy", book_path(book) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<!--新規投稿機能-->
<h2>New book</h2>
<%= form_with model:@book, local: true do |f| %>
<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :body %><br>
  <%= f.text_area :body %>
</div>

<div class="action">
  <%= f.submit "Create Book" %>
</div>
<% end %>