<h1>Editing Book</h1>

<!--編集フォーム-->
<%= form_with model:@book, local: true do |f| %>

<% if @book.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:
  </h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li>
      <%= message %>
    </li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :body %>
  <%= f.text_area :body %>
</div>

<div class="action">
  <%= f.submit "Update Book" %>
</div>
<% end %>

<!--Editリンクとindexリンク-->
