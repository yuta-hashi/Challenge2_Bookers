<h1>Editing Book</h1>

<!--編集フォーム-->
<%= form_with model:@book, local: true do |f| %>
<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :body %><br>
  <%= f.text_area :body %>
</div>

<div class="action">
  <%= f.submit "Update Book" %>
</div>
<% end %>

<!--Editリンクとindexリンク-->
<p>
  <%= link_to "Edit", edit_book_path(params[:id]) %>
  |
  <a class="back" href=/books>Back</a>
</p>